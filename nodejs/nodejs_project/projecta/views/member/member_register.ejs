<script>
$(()=>{
  $("#btnregister").click(()=>{
    var params = $("#myform").serialize();
    $.ajax({
      url:"/member/register",
      data:params,
      method:"POST",
      dataType:"json"
    })
    .done((result)=>{
      if(result.result=="success"){
        alert("회원가입성공");
        location.href="/member/logon";
      }else{
        alert("회원가입실패");
        location.href="/";
      }
    })
  })
})
</script>